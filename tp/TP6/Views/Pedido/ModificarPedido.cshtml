@model ViewModels.P_ModificarViewModel

@{
    ViewData["Title"] = "Pedido Page";
}

<div >
    <form asp-controller="Pedido" asp-action= "Actualizar" method="post">

        <legend>"Modificar Pedido"</legend>
        
        <div class="form-group">
            <label asp-for="@Model.Obs" class="control-label">@Html.DisplayNameFor(Model => Model.Obs)</label>
            <input asp-for="@Model.Obs" class="form-control">
            <span asp-validation-for="@Model.Obs" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.estado" class="control-label">@Html.DisplayNameFor(Model => Model.Obs)</label>
            <input asp-for="@Model.estado" class="form-control">
            <span asp-validation-for="@Model.estado" class="text-danger"></span>
        </div>
        <div class="form-group">
             <input type="number" value=@Model.Nro name="Nro" hidden>
            <input class="btn btn-primary" type="submit" value="Guardar" class="btn btn-info" />
        </div>
        
    </form>
</div>