@model ViewModels.P_IndexViewModel

@{
    ViewData["Title"] = "Pedido Page";
}

<div >
    <form asp-controller="Pedido" asp-action= "addPedido" method="post">

        <legend>"Registrar Pedido"</legend>
        
        <div class="form-group">
            <label asp-for="Obs" class="control-label"></label>
            <input asp-for="Obs" class="form-control">
            <span asp-validation-for="Obs" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="estado" class="control-label"></label>
            <select asp-for="estado" class="text-danger">
            <option value="Entregado">Entregado</option>
            <option value="Pendiente">Pendiente</option>
            </select>
            
            <span asp-validation-for="@Model.estado" class="text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="id_cliente" class="control-label"></label>
            <input asp-for="id_cliente" class="form-control">
            <span asp-validation-for="id_cliente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="id_cadete" class="control-label"></label>
            <input asp-for="id_cadete" class="form-control">
            <span asp-validation-for="id_cadete" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Guardar" class="btn btn-info" />
        </div>
        @* <input asp-for="Id" value="0" type="hidden"/> *@
    </form>
</div>
        
        