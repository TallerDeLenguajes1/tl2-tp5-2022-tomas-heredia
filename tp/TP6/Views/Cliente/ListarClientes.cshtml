@model List<MyApp.Cliente> 

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nombre</th>
      <th scope="col">Direccion</th>
      <th scope="col">Telefono</th>
      <th scope="col">Descripcion Direccion</th>
      <th scope="col">Borrar</th>
    </tr>
  </thead>
@foreach (var item in Model)
{
  <tbody>
    <tr>
      <th scope="row">@item.id</th>
      <td>@item.nombre</td>
      <td>@item.direccion</td>
      <td>@item.telefono</td>
      <td>@item.DatosReferenciaDireccion</td>
      <td>
        <form asp-controller="Cliente" asp-action= "bajaCliente" method="post">
            <input type="number" value=@item.id name="id" hidden>
            <input  class="btn btn-danger" type="submit" value="Eliminar">
            
        </form>
      </td>
    </tr>
   
  </tbody>
    
}
</table>